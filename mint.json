{
  "name": "mint-ui-website",
  "mint-version": "0.19.0 <= v < 1.0.0",
  "application": {
    "name": "Mint UI",
    "title": "Mint UI - Beautiful, Reliable Components for Mint",
    "head": "assets/head.html",
    "theme-color": "#FFF",
    "display": "standalone",
    "orientation": "portrait",
    "icon": "assets/icon.png",
    "meta": {
      "viewport": "width=device-width, initial-scale=1, user-scalable=no",
      "description": "A fully featured reliable UI component library for Mint.",
      "charset": "utf-8"
    }
  },
  "source-directories": [
    "../mint-ui/source",
    "source"
  ],
  "dependencies": {
    "mint-color": {
      "repository": "https://github.com/mint-lang/mint-color",
      "constraint": "0.9.0 <= v < 1.0.0"
    }
  }
}
